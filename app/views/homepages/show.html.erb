<div class="container">
<div class="row">
  <div class="col-md-12">
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption font-green-sharp">
        	<%= link_to movies_path do %>
	          <i class="icon-speech font-green-sharp"></i>
	          <span class="caption-subject bold uppercase"> Movie</span>
	          <span class="caption-helper">More...</span>
          <% end %>
        </div>
      </div>
      <div class="portlet-body">
      	<div style="height: 580px;">
    			<ul class="wy-pro-list">
    				<% @movies.each do |movie| %>
    				<li>
              <%= link_to movie_path(movie) do %>
                <img src="<%= movie.img_url %>" style="width: 180px; height: 200px;">
                <div class="wrapper-listTitle">
                  <div class="mod-listTitle">
                    <p class="video_rb">
                      <span class="icon-vInfo"><%= movie.duration %></span>
                    </p>
                  </div>
                </div>
                <div class="text">
                	<div class="score"><%= movie.score %></div>
                	<h5><%= movie.title.truncate(12) %></h5>
                  <p class="overflow-hidden">主演：<%= movie.actors_html %></p>
                </div>
              <% end %>
    				</li>
    				<% end %>
    			</ul>
        </div>
      </div>
    </div>
  </div>
</div>
